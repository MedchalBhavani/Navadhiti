.then(updated => {
currentUser = updated;
localStorage.setItem("loggedInUser", JSON.stringify(updated));
alert("Password updated successfully!");
document.getElementById("newPassword").value = "";
})
.catch(err => {
console.error(err);
alert("Error: " + err.message);
});
}
}

